<Window x:Class="OracleDbClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OracleDbClient"
        mc:Ignorable="d"
        Title="LoginWindow" MinHeight="480" MinWidth="800" Width="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="115*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Log in" Margin="10,35,0,0" Click="Login_Button_Click" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" />
        <TextBox x:Name="userName" Margin="165,35,10,0" TextWrapping="Wrap" Height="24" VerticalAlignment="Top" />
        <PasswordBox x:Name="password" Margin="10,35,10,0" Height="24" VerticalAlignment="Top" Grid.Column="1" />
        <TextBlock Margin="165,10,0,0" TextWrapping="Wrap" Text="User name" Height="20" VerticalAlignment="Top"/>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="Password" Height="20" VerticalAlignment="Top" Grid.Column="1"/>
    </Grid>
</Window>
